<div class="container">
  <div class="container">
    <h1 style="color:black;">
      Here's Your Profile!
    </h1>
    <h3>
      <%= @profile.name %>
    </h3>
    <img src="<%= @profile.photo.url %>" alt="">
    <h3>
      <%= @profile.description %>
    </h3>
