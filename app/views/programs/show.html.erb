<div class="space-80"></div>
<div class="container" ng-controller="programCtrl" ng-init="show(<%= params[:id] %>)">
    <div class="row">
        <div class="col-md-9">
            <div class="causes-single-box">
              <img ng-src="{{program.photo}}" alt="" class="img-responsive">
                <div class="single-box-desc">
                    <h2 class="text-uppercase">{{program.name}}</h2>
                    <h5>{{ program.address }}, {{program.zipcode }}</h5>
                    <h5>{{program.start_date | date:fullDate}} - {{program.end_date | date:fullDate}}</h5>
                    <div class="row raised-amount">
                        <div class="col-sm-8">
                            <div class="progress clearfix">
                                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: {{(program.total_donated / program.donation_goal) * 100}}%"></div>
                            </div>
                            <h3 class="text-uppercase">Donated: <strong>{{program.total_donated | currency: "$" : 2}}</strong> / {{program.donation_goal | currency: "$" : 2}}</h3>
                        </div>
                        <% if !current_user.resident %>
                        <div class="col-sm-4">
                          <div class="col-sm-4 text-right">
                              <a href="/programs/{{program.id}}/edit" class="btn btn-theme-bg btn-lg">Edit</a>
                          </div>
                          <div class="col-sm-4 text-right">
                              <%= form_tag("/programs/api/{{program.id}}") %>


                              <a href="/programs/api/{{program.id}}" class="btn btn-theme-bg btn-lg">Delete</a>
                          </div>
                        </div>
                        <% else %>
                        <div class="col-sm-4 text-right">
                            <a href="" class="btn btn-theme-bg btn-lg">Donate</a>
                        </div>
                        <% end %>
                    </div>

                    <h5>{{program.description}}</h5>
                    <hr>
                    <ul class="list-inline text-right">
                        <li>Share it:</li>
                        <li><a href="#"><i class="fa fa-facebook-official"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                    </ul>
                </div>
            </div><!--causes-single-box-->
          </div>
    </div>
<footer id="footer" class="footer">
    <div class="container text-center text-copyright">
        <span>&copy; Helperhood</span>
    </div>
</footer>
</div>
