
<% if current_user && !current_user.resident %>
<%= link_to "Edit the program", "/programs/#{@program.id}/edit" %>
<% end %>
<div class="space-80"></div>
<div class="container" ng-controller="programCtrl" ng-init="show(<%= params[:id] %>)">
    <div class="row">
        <div class="col-md-9">
            <div class="causes-single-box">
                <div class="single-box-desc">
                    <h2 class="text-uppercase">{{program.name}}</h2>
                    <h5>{{ program.address }}, {{program.zipcode }}</h5>
                    <h5>{{program.start_date | date:fullDate}} - {{program.end_date | date:fullDate}}</h5>
                    <div class="row raised-amount">
                        <div class="col-sm-8">
                            <div class="progress clearfix">
                                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
                            </div>
                            <h3 class="text-uppercase">Donated: <strong>{{program.total_donated | currency: "$" : 2}}</strong> / {{program.donation_goal | currency: "$" : 2}}</h3>
                        </div>
                        <div class="col-sm-4 text-right">
                            <a href="#" class="btn btn-theme-bg btn-lg">Donate now</a>
                        </div>
                    </div>

                    <p>{{program.description}}</p>
                    <hr>
                    <ul class="list-inline text-right">
                        <li>Share it:</li>
                        <li><a href="#"><i class="fa fa-facebook-official"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                    </ul>
                </div>
            </div><!--causes-single-box-->
          </div>
          <div class="col-md-3">
              <div class="sidebar-widget search-widget">
                  <form>
                      <input type="text" class="form-control" placeholder="Search here..">
                      <button type="submit"><i class="fa fa-search"></i></button>
                  </form>
              </div><!--end sidebar widget-->
              <div class="sidebar-widget">
                  <h4 class="text-uppercase">Categories</h4>
                  <ul class="list-unstyled">
                      <li><a href="#">Poverty</a></li>
                      <li><a href="#">Education</a></li>
                      <li><a href="#">Water</a></li>
                      <li><a href="#">Child</a></li>
                      <li><a href="#">Africa</a></li>
                      <li><a href="#">Nigeria</a></li>
                      <li><a href="#">India</a></li>
                  </ul>
              </div><!--end sidebar widget col-->
              <div class="sidebar-widget">
                  <h4 class="text-uppercase">Categories</h4>
                  <ul class="list-inline tags">
                      <li><a href="#">Poverty</a></li>
                      <li><a href="#">Education</a></li>
                      <li><a href="#">Water</a></li>
                      <li><a href="#">Child</a></li>
                      <li><a href="#">Africa</a></li>
                      <li><a href="#">Nigeria</a></li>
                      <li><a href="#">India</a></li>
                  </ul>
                  </ul>
            </div>
        </div>
      </div>
</div>
<footer id="footer" class="footer">
    <div class="container text-center text-copyright">
        <span>&copy; Helperhood</span>
    </div>
</footer>
