<div ng-controller="programCtrl" ng-init="nonprofitIndex()">
  <div class="space-80"></div>
  <h1 class="text-blue" align="center">Your programs</h1>
<div class="space-80"></div>
<div class='container'>
    <div class="row">
        <div class="col-md-9">
            <div class="causes-list-box" ng-repeat="program in programs | filter : filterName | orderBy : id">
                <div class="row vertical-center">
                    <div class="col-sm-6">
                      <img ng-src="{{program.photo}}" alt="" class="img-responsive">
                    </div>
                    <!-- Add some padding here -->
                    <div class="col-sm-6">
                        <div class="causes-desc">
                            <h4><a href="/programs/{{program.id}}">{{program.name}}</a></h4>
                            <div class="progress clearfix">
                                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: {{(program.total_donated / program.donation_goal) * 100}}%"></div>
                            </div>
                            <div class="row causes-amount">
                                <div class="col-xs-6">
                                    <span>Start Date:</span>
                                    <h1>{{program.start_date | date:fullDate}}</h1>
                                </div>
                                <div class="col-xs-6">
                                    <span>End Date:</span>
                                    <h1>{{program.end_date | date:fullDate}}</h1>
                                </div>
                                <div ng-if="{{program.donation_goal}} === 0">
                                  <div class="col-xs-6">
                                    <span>Raised</span>
                                    <h1>{{program.total_donated | currency: "$" : 2}}</h1>
                                </div>
                                  <div class="col-xs-6">
                                      <span>Goal:</span>
                                      <h1>{{program.donation_goal | currency: "$" : 2}}</h1>
                                  </div>
                                </div>
                            </div>
                            <br>
                            <h4>{{program.description}}</h4>
                            <button class="btn btn-theme-bg">
                              <a href="/programs/{{programs.id}}/edit">Edit</a>
                            </button>
                        </div>
                    </div>
                </div>
              </div>
            </div>
            <div class="col-md-3">
                    <div class="sidebar-widget search-widget">
                        <form>
                            <input type="text" ng-model="filterName" class="form-control" placeholder="Name search" >
                            <button type="submit"><i class="fa fa-search"></i></button>
                        </form>
                    </div><!--end sidebar widget-->
                  </div>
          </div>
        </div>
          <hr>
<footer id="footer" class="footer">
    <div class="container text-center text-copyright">
        <span>&copy; Helperhood</span>
    </div>
</footer>
